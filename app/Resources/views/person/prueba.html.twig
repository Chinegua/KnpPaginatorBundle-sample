{% extends 'base.html.twig' %}

{% block body %}
    <div class="count">
        Numero de personas: {{ pagination.getTotalItemCount }}
    </div>
    <table>
        <tr>
            {# sorting of properties based on query components #}
            <th>{{ knp_pagination_sortable(pagination, 'Name', 'a.name') }}</th>
            <th{% if pagination.isSorted('a.number') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Number', 'a.number') }}</th>
        </tr>

        {# table body #}
        {% for person in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ person.name }}</td>
                <td>{{ person.number }}</td>
            </tr>
        {% endfor %}
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
